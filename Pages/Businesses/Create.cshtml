@page
@model CreateModel

<h1>Register Business</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Business.Name"></label>
        <input asp-for="Business.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Business.Location"></label>
        <input asp-for="Business.Location" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Business.Category"></label>
        <input asp-for="Business.Category" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Business.Description"></label>
        <textarea asp-for="Business.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Business.PhoneNumber"></label>
        <input asp-for="Business.PhoneNumber" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>